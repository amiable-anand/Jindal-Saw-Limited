<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:Jindal.Views"
       x:Class="Jindal.AppShell"
       FlyoutBehavior="Flyout">

    <FlyoutItem Title="Location" Icon="location_icon.png">
        <ShellContent ContentTemplate="{DataTemplate views:LocationPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Room" Icon="room_icon.png">
        <ShellContent ContentTemplate="{DataTemplate views:RoomPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Check In/Out" Icon="check_icon.png">
        <ShellContent ContentTemplate="{DataTemplate views:CheckInOutPage}" />
    </FlyoutItem>
    
    <FlyoutItem Title="Logout" Icon="logout_icon.png">
        <ShellContent ContentTemplate="{DataTemplate views:LogoutPage}" />
    </FlyoutItem>


</Shell>
