{
  "ApiSettings": {
    "BaseUrl": "https://api.jindalguestmanagement.com/api",
    "Version": "v1",
    "TimeoutSeconds": 30
  },
  "DatabaseSettings": {
    "DatabaseType": "Hybrid",
    "SqlServerConnectionString": "Server=localhost;Database=JindalGuestManagement;Integrated Security=true;TrustServerCertificate=true;ConnectRetryCount=3;ConnectRetryInterval=10;",
    "EnableAutoSync": true,
    "SyncIntervalMinutes": 15,
    "PreferCloudWhenAvailable": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Jindal.Services.HybridDatabaseService": "Debug"
    }
  }
}
