<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jindal.Views.EditGuestPage"
             Title="Edit Guest">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <Label Text="Room Number:" FontAttributes="Bold"/>
            <Label x:Name="RoomLabel" TextColor="Gray" FontSize="16"/>

            <Entry x:Name="GuestNameEntry" Placeholder="Guest Name" FontSize="14"/>
            <Entry x:Name="GuestIdEntry" Placeholder="ID Number" FontSize="14"/>
            <Entry x:Name="DepartmentEntry" Placeholder="Department" FontSize="14"/>
            <Entry x:Name="PurposeEntry" Placeholder="Purpose" FontSize="14"/>

            <HorizontalStackLayout Spacing="12">
                <VerticalStackLayout>
                    <Label Text="Check-In Date" FontSize="12"/>
                    <DatePicker x:Name="CheckInDatePicker"/>
                </VerticalStackLayout>

                <VerticalStackLayout>
                    <Label Text="Check-In Time" FontSize="12"/>
                    <TimePicker x:Name="CheckInTimePicker"/>
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <Button Text="Save"
                    BackgroundColor="#10B981"
                    TextColor="White"
                    CornerRadius="8"
                    Clicked="OnSaveClicked"/>

            <Button Text="Add Guest to This Room"
                    BackgroundColor="#3B82F6"
                    TextColor="White"
                    CornerRadius="8"
                    Clicked="OnAddGuestToSameRoomClicked"/>

            <Label Text="Guests in the same room:"
                   FontSize="16"
                   FontAttributes="Bold"
                   Margin="0,20,0,5"/>

            <Grid x:Name="RoomGuestsTable"
                  ColumnDefinitions="*,*,*,*,*"
                  RowSpacing="10"
                  ColumnSpacing="6"
                  Padding="4">
                <!-- Guest rows inserted in code-behind -->
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
