<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jindal.Views.ErrorPage"
             Title="Error"
             BackgroundColor="{StaticResource Error}">
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
            <!-- Error Icon -->
            <Label Text="âš ï¸" 
                   FontSize="64" 
                   HorizontalOptions="Center" 
                   TextColor="White" />
            
            <!-- Error Title -->
            <Label Text="Application Error" 
                   FontSize="28" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" 
                   TextColor="White" 
                   HorizontalTextAlignment="Center" />
            
            <!-- Error Message -->
            <Border BackgroundColor="#FFFFFF20"
                    StrokeShape="RoundRectangle 12"
                    Padding="20"
                    Margin="0,10,0,20">
                <Label x:Name="ErrorMessageLabel" 
                       FontSize="16" 
                       TextColor="White" 
                       HorizontalTextAlignment="Center" 
                       LineBreakMode="WordWrap" />
            </Border>
            
            <!-- Action Buttons -->
            <VerticalStackLayout Spacing="12">
                <Button x:Name="RetryButton" 
                        Text="ðŸ”„ Try Again" 
                        BackgroundColor="White" 
                        TextColor="{StaticResource Error}" 
                        FontSize="16" 
                        FontAttributes="Bold"
                        HeightRequest="50" 
                        CornerRadius="25" 
                        HorizontalOptions="Center"
                        WidthRequest="200"
                        Clicked="OnRetryClicked"/>
                
                <Button x:Name="HomeButton" 
                        Text="ðŸ  Go to Login" 
                        BackgroundColor="Transparent" 
                        TextColor="White" 
                        FontSize="14" 
                        BorderColor="White"
                        BorderWidth="1"
                        HeightRequest="44" 
                        CornerRadius="22" 
                        HorizontalOptions="Center"
                        WidthRequest="180"
                        Clicked="OnHomeClicked"/>
            </VerticalStackLayout>
            
            <!-- Additional Info -->
            <Label x:Name="ErrorDetailsLabel"
                   FontSize="12" 
                   TextColor="#FFFFFF80" 
                   HorizontalOptions="Center" 
                   HorizontalTextAlignment="Center"
                   LineBreakMode="WordWrap"
                   IsVisible="False"/>
                   
            <!-- Toggle Details Button -->
            <Button x:Name="ToggleDetailsButton" 
                    Text="Show Details" 
                    BackgroundColor="Transparent" 
                    TextColor="#FFFFFF60" 
                    FontSize="12" 
                    HeightRequest="40" 
                    HorizontalOptions="Center"
                    Clicked="OnToggleDetailsClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
