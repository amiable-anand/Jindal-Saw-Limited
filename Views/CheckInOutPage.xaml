<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jindal.Views.CheckInOutPage"
             Title="Check In/Out"
             BackgroundColor="#121212">

    <VerticalStackLayout Padding="20" Spacing="24">

        <!-- Page Title -->
        <Label Text="Guest Check In / Out"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#FAFAFA"
               Margin="0,10"/>

        <!-- Control Panel: Add, Filter, Search, Reset -->
        <Frame BackgroundColor="#1E1E1E"
               CornerRadius="18"
               HasShadow="False"
               Padding="16"
               BorderColor="#2A2A2A"
               Margin="0,0,0,10">

            <Grid ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Add New Entry Button -->
                <Button Text="+ Check In/Out"
                        Clicked="OnAddClicked"
                        BackgroundColor="#1F2937"
                        TextColor="#10B981"
                        FontSize="13"
                        CornerRadius="6"
                        Padding="10,4"
                        WidthRequest="110"
                        HeightRequest="36"
                        BorderColor="#10B981"
                        BorderWidth="1" />

                <!-- Filter Picker by Room -->
                <Picker x:Name="RoomFilterPicker"
                        Title="Filter by Room"
                        BackgroundColor="#2F2F2F"
                        TextColor="#DDDDDD"
                        TitleColor="#888"
                        Margin="4,0"
                        HeightRequest="42"
                        FontSize="13"
                        Grid.Column="1"/>

                <!-- Search Guest by Name -->
                <Entry x:Name="SearchEntry"
                       Placeholder="Search guest name..."
                       BackgroundColor="#2F2F2F"
                       TextColor="#DDDDDD"
                       PlaceholderColor="#888"
                       Margin="4,0"
                       HeightRequest="42"
                       FontSize="13"
                       Grid.Column="2"
                       TextChanged="OnSearchTextChanged"/>

                <!-- Reset Filters -->
                <Button Text="Reset"
                        Clicked="OnReloadClicked"
                        BackgroundColor="#2F2F2F"
                        TextColor="#58A6FF"
                        FontAttributes="Bold"
                        Padding="10,6"
                        CornerRadius="10"
                        FontSize="16"
                        Grid.Column="3" />
            </Grid>
        </Frame>

        <!-- Scrollable Table Header -->
        <ScrollView Orientation="Horizontal">
            <Frame BackgroundColor="#1E1E1E"
                   CornerRadius="18"
                   Padding="16"
                   HasShadow="False"
                   BorderColor="#2A2A2A">

                <Grid x:Name="CheckInOutTable"
                      ColumnSpacing="16"
                      RowSpacing="12">

                    <!-- Table Header Row Definition -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>

                    <!-- Define Columns for Each Field -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <!-- Room No -->
                        <ColumnDefinition Width="200"/>
                        <!-- Guest Name -->
                        <ColumnDefinition Width="180"/>
                        <!-- Guest ID No -->
                        <ColumnDefinition Width="140"/>
                        <!-- Check In Date -->
                        <ColumnDefinition Width="120"/>
                        <!-- Check In Time -->
                        <ColumnDefinition Width="140"/>
                        <!-- Check Out Date -->
                        <ColumnDefinition Width="120"/>
                        <!-- Check Out Time -->
                        <ColumnDefinition Width="120"/>
                        <!-- Department -->
                        <ColumnDefinition Width="140"/>
                        <!-- Purpose -->
                        <ColumnDefinition Width="160"/>
                        <!-- Mail Received -->
                    </Grid.ColumnDefinitions>

                    <!-- Column Headers -->
                    <Label Text="Room No" Grid.Column="0" FontAttributes="Bold" TextColor="#93C5FD" FontSize="13"/>
                    <Label Text="Guest Name" Grid.Column="1" FontAttributes="Bold" TextColor="#93C5FD" FontSize="13"/>
                    <Label Text="Guest ID No" Grid.Column="2" FontAttributes="Bold" TextColor="#93C5FD" FontSize="13"/>
                    <Label Text="Check In Date" Grid.Column="3" FontAttributes="Bold" TextColor="#93C5FD" FontSize="13"/>
                    <Label Text="Check In Time" Grid.Column="4" FontAttributes="Bold" TextColor="#93C5FD" FontSize="13"/>
                    <Label Text="Check Out Date" Grid.Column="5" FontAttributes="Bold" TextColor="#93C5FD" FontSize="13"/>
                    <Label Text="Check Out Time" Grid.Column="6" FontAttributes="Bold" TextColor="#93C5FD" FontSize="13"/>
                    <Label Text="Dept" Grid.Column="7" FontAttributes="Bold" TextColor="#93C5FD" FontSize="13"/>
                    <Label Text="Purpose" Grid.Column="8" FontAttributes="Bold" TextColor="#93C5FD" FontSize="13"/>
                    <Label Text="Mail Received Date" Grid.Column="9" FontAttributes="Bold" TextColor="#93C5FD" FontSize="13"/>
                </Grid>
            </Frame>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>
