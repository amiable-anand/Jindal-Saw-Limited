<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jindal.Views.LoadingPage"
             Title="Loading..."
             BackgroundColor="#1E3A8A">
    <Grid>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
            <ActivityIndicator IsRunning="True" Color="White" WidthRequest="60" HeightRequest="60" />
            <Label x:Name="LoaderLabel" Text="Initializing Jindal Guest Management..." 
                   FontSize="18" 
                   TextColor="White" 
                   HorizontalOptions="Center" 
                   Margin="0,20,0,0"/>
            <Label x:Name="WaitLabel" Text="Please wait..." 
                   FontSize="14" 
                   TextColor="LightGray" 
                   HorizontalOptions="Center" 
                   Margin="0,5,0,0"/>
        </StackLayout>
    </Grid>
</ContentPage>
