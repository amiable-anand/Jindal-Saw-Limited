<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jindal.Views.AddEditRoomPage"
             Title="Add/Edit Room"
             BackgroundColor="#F8FAFC">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Welcome Section -->
            <Frame BackgroundColor="#1E3A8A" 
                   CornerRadius="16" 
                   Padding="20" 
                   HasShadow="True">
                <Label Text="🏠 Add or Edit Room"
                       FontSize="20"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="White" />
            </Frame>

            <Frame BackgroundColor="White"
                   CornerRadius="12"
                   HasShadow="True"
                   Padding="20">
                <VerticalStackLayout Spacing="16">

                    <!-- Room Number -->
                    <Label Text="Room Number"
                           TextColor="#64748B"
                           FontSize="14" />
                    <Entry x:Name="RoomNumberEntry"
                           Placeholder="Enter Room Number"
                           Keyboard="Numeric"
                           BackgroundColor="#F3F4F6"
                           TextColor="#374151"
                           PlaceholderColor="#9CA3AF"
                           HeightRequest="48" />

                    <!-- Location Picker -->
                    <Label Text="Location"
                           TextColor="#64748B"
                           FontSize="14" />
                    <Picker x:Name="LocationPicker"
                            Title="Select Location"
                            BackgroundColor="#F3F4F6"
                            TextColor="#374151"
                            TitleColor="#64748B"
                            ItemDisplayBinding="{Binding Name}" />

                    <!-- Remark -->
                    <Label Text="Remark"
                           TextColor="#64748B"
                           FontSize="14" />
                    <Entry x:Name="RemarkEntry"
                           Placeholder="Enter Remark or Floor"
                           BackgroundColor="#F3F4F6"
                           TextColor="#374151"
                           PlaceholderColor="#9CA3AF"
                           HeightRequest="48" />

                    <!-- Save Button -->
                    <Button Text="Save"
                            Clicked="OnSaveClicked"
                            BackgroundColor="#059669"
                            TextColor="White"
                            FontSize="16"
                            FontAttributes="Bold"
                            CornerRadius="12"
                            Padding="16,10"
                            HeightRequest="50"
                            HorizontalOptions="Center"
                            WidthRequest="200" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
