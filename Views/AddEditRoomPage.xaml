<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jindal.Views.AddEditRoomPage"
             Title="Add/Edit Room"
             BackgroundColor="#0D0D0D"
             Padding="20">

    <VerticalStackLayout Spacing="16">

        <Label Text="Room Number" TextColor="White" FontSize="14" />
        <Entry x:Name="RoomNumberEntry"
               Placeholder="Enter Room Number"
               Keyboard="Numeric"
               BackgroundColor="#1E1E1E"
               TextColor="White" />

        <Label Text="Location" TextColor="White" FontSize="14" />
        <Entry x:Name="LocationEntry"
               Placeholder="Enter Location"
               BackgroundColor="#1E1E1E"
               TextColor="White" />

        <Label Text="Remark" TextColor="White" FontSize="14" />
        <Editor x:Name="RemarkEntry"
                Placeholder="Optional"
                AutoSize="TextChanges"
                BackgroundColor="#1E1E1E"
                TextColor="White" />

        <Button Text="Save"
                Clicked="OnSaveClicked"
                BackgroundColor="#2563EB"
                TextColor="White"
                FontSize="14"
                CornerRadius="6"
                Padding="10"
                HeightRequest="44" />
    </VerticalStackLayout>
</ContentPage>
