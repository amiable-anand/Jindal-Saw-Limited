<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jindal.Views.AddEditRoomPage"
             Title="Add/Edit Room"
             BackgroundColor="#0D0D0D"
             Padding="20">

    <!-- Main Layout -->
    <VerticalStackLayout Spacing="16">

        <!-- Room Number -->
        <Label Text="Room Number"
               TextColor="White"
               FontSize="14" />
        <Entry x:Name="RoomNumberEntry"
               Placeholder="Enter Room Number"
               Keyboard="Numeric"
               BackgroundColor="#1E1E1E"
               TextColor="White" />

        <!-- Location Picker -->
        <Label Text="Location"
               TextColor="White"
               FontSize="14" />
        <Picker x:Name="LocationPicker"
                Title="Select Location"
                BackgroundColor="#1E1E1E"
                TextColor="White">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Jindal Saw Ltd Guest House - Samaghogha</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <!-- Remark Text Entry -->
        <Label Text="Remark"
               TextColor="White"
               FontSize="14" />
        <Entry x:Name="RemarkEntry"
               Placeholder="Enter Remark or Floor"
               BackgroundColor="#1E1E1E"
               TextColor="White" />

        <!-- Save Button -->
        <Button Text="Save"
                Clicked="OnSaveClicked"
                BackgroundColor="#2563EB"
                TextColor="White"
                FontSize="14"
                CornerRadius="6"
                Padding="10"
                HeightRequest="44" />
    </VerticalStackLayout>
</ContentPage>
