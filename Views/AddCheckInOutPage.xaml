<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jindal.Views.AddCheckInOutPage"
             Title="Add Check In/Out"
             BackgroundColor="#0D0D0D">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="24">

            <!-- Page Title -->
            <Label Text="Add Guest Check In / Out"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#E0E0E0" />

            <!-- Guest Info Form -->
            <Frame BackgroundColor="#1A1A1A"
                   CornerRadius="20"
                   HasShadow="True"
                   Padding="20"
                   BorderColor="#2A2A2A">

                <Grid RowSpacing="20" ColumnSpacing="14">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Row 1 -->
                    <Picker x:Name="RoomPicker"
                            Title="Select Room"
                            Grid.Row="0" Grid.Column="0"
                            BackgroundColor="#222222"
                            TextColor="#FFFFFF"
                            TitleColor="#888"
                            FontSize="14"
                            HeightRequest="48"
                            HorizontalTextAlignment="Start"/>

                    <Picker x:Name="IdTypePicker"
                            Title="Select ID Type"
                            Grid.Row="0" Grid.Column="1"
                            BackgroundColor="#222222"
                            TextColor="#FFFFFF"
                            FontSize="14"
                            HeightRequest="48"
                            TitleColor="#888"
                            HorizontalOptions="Fill"
                            VerticalOptions="Center"
                            Margin="0,4,0,0">
                        <Picker.ItemsSource>
                            <x:Array Type="{x:Type x:String}">
                                <x:String>Aadhaar Card</x:String>
                                <x:String>Driving License</x:String>
                                <x:String>Passport</x:String>
                                <x:String>PAN Card</x:String>
                            </x:Array>
                        </Picker.ItemsSource>
                    </Picker>



                    <!-- Row 2 -->
                    <Entry x:Name="IdNumberEntry"
                           Placeholder="ID Number"
                           Grid.Row="1" Grid.Column="0"
                           BackgroundColor="#222222"
                           TextColor="#CCCCCC"
                           PlaceholderColor="#777"
                           FontSize="14"
                           HeightRequest="48"/>

                    <Entry x:Name="GuestNameEntry"
                           Placeholder="Guest Name"
                           Grid.Row="1" Grid.Column="1"
                           BackgroundColor="#222222"
                           TextColor="#CCCCCC"
                           PlaceholderColor="#777"
                           FontSize="14"
                           HeightRequest="48"/>

                    <!-- Row 3 -->
                    <Entry x:Name="CompanyEntry"
                           Placeholder="Company Name"
                           Grid.Row="2" Grid.Column="0"
                           BackgroundColor="#222222"
                           TextColor="#CCCCCC"
                           PlaceholderColor="#777"
                           FontSize="14"
                           HeightRequest="48"/>

                    <Entry x:Name="MobileEntry"
                           Placeholder="Mobile"
                           Grid.Row="2" Grid.Column="1"
                           BackgroundColor="#222222"
                           TextColor="#CCCCCC"
                           PlaceholderColor="#777"
                           FontSize="14"
                           HeightRequest="48"/>

                    <!-- Row 4 -->
                    <Entry x:Name="NationalityEntry"
                           Placeholder="Nationality"
                           Grid.Row="3" Grid.Column="0"
                           BackgroundColor="#222222"
                           TextColor="#CCCCCC"
                           PlaceholderColor="#777"
                           FontSize="14"
                           HeightRequest="48"/>

                    <Entry x:Name="AddressEntry"
                           Placeholder="Address"
                           Grid.Row="3" Grid.Column="1"
                           BackgroundColor="#222222"
                           TextColor="#CCCCCC"
                           PlaceholderColor="#777"
                           FontSize="14"
                           HeightRequest="48"/>

                    <!-- Row 5 -->
                    <DatePicker x:Name="CheckInDatePicker"
                                Grid.Row="4" Grid.Column="0"
                                TextColor="#CCCCCC"
                                BackgroundColor="#222222"
                                HeightRequest="48"/>

                    <TimePicker x:Name="CheckInTimePicker"
                                Grid.Row="4" Grid.Column="1"
                                TextColor="#CCCCCC"
                                BackgroundColor="#222222"
                                HeightRequest="48"/>
                </Grid>
            </Frame>

            <!-- Check Out Info -->
            <Frame BackgroundColor="#1A1A1A"
                   CornerRadius="20"
                   HasShadow="True"
                   Padding="20"
                   BorderColor="#2A2A2A">

                <Grid RowSpacing="20" ColumnSpacing="14">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Check Out Date & Time -->
                    <DatePicker x:Name="CheckOutDatePicker"
                                Grid.Row="0" Grid.Column="0"
                                TextColor="#CCCCCC"
                                BackgroundColor="#222222"
                                HeightRequest="48"/>

                    <TimePicker x:Name="CheckOutTimePicker"
                                Grid.Row="0" Grid.Column="1"
                                TextColor="#CCCCCC"
                                BackgroundColor="#222222"
                                HeightRequest="48"/>

                    <!-- Department & Purpose -->
                    <Entry x:Name="DepartmentEntry"
                           Placeholder="Department"
                           Grid.Row="1" Grid.Column="0"
                           BackgroundColor="#222222"
                           TextColor="#CCCCCC"
                           PlaceholderColor="#777"
                           FontSize="14"
                           HeightRequest="48"/>

                    <Entry x:Name="PurposeEntry"
                           Placeholder="Purpose"
                           Grid.Row="1" Grid.Column="1"
                           BackgroundColor="#222222"
                           TextColor="#CCCCCC"
                           PlaceholderColor="#777"
                           FontSize="14"
                           HeightRequest="48"/>

                    <!-- Mail Received -->
                    <DatePicker x:Name="MailReceivedDatePicker"
                                Grid.Row="2" Grid.ColumnSpan="2"
                                TextColor="#CCCCCC"
                                BackgroundColor="#222222"
                                HeightRequest="48"/>
                </Grid>
            </Frame>

            <!-- Action Buttons -->
            <HorizontalStackLayout Spacing="16" HorizontalOptions="Center">
                <!-- Add Guest Button -->
                <Button Text="+ Add Guest"
            BackgroundColor="#1F2937"
            TextColor="#93C5FD"
            FontSize="14"
            CornerRadius="12"
            Padding="16,8"
            WidthRequest="130"
            HeightRequest="46"
            BorderColor="#3B82F6"
            BorderWidth="1">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup Name="CommonStates">
                            <VisualState Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="Scale" Value="0.96" />
                                    <Setter Property="BackgroundColor" Value="#3B82F6" />
                                    <Setter Property="TextColor" Value="#E0F2FE" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="Scale" Value="1" />
                                    <Setter Property="BackgroundColor" Value="#1F2937" />
                                    <Setter Property="TextColor" Value="#93C5FD" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </Button>

                <!-- Check In Button -->
                <Button Text="âœ“ Check In"
            BackgroundColor="#1F2937"
            TextColor="#10B981"
            FontSize="14"
            CornerRadius="12"
            Padding="20,8"
            WidthRequest="130"
            HeightRequest="46"
            BorderColor="#10B981"
            BorderWidth="1">
                    <VisualStateManager.VisualStateGroups>
                        <VisualStateGroup Name="CommonStates">
                            <VisualState Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="Scale" Value="0.96" />
                                    <Setter Property="BackgroundColor" Value="#047857" />
                                    <Setter Property="TextColor" Value="#D1FAE5" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="Scale" Value="1" />
                                    <Setter Property="BackgroundColor" Value="#1F2937" />
                                    <Setter Property="TextColor" Value="#10B981" />
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateManager.VisualStateGroups>
                </Button>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
