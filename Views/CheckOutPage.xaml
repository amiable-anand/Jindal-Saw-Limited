<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jindal.Views.CheckOutPage"
             Title="Check Out"
             BackgroundColor="#0D0D0D">

    <VerticalStackLayout Padding="24" Spacing="24">

        <Label Text="Guest Check Out"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#E0E0E0" />

        <Frame BackgroundColor="#1A1A1A"
               CornerRadius="20"
               HasShadow="True"
               Padding="20"
               BorderColor="#2A2A2A">

            <VerticalStackLayout Spacing="16">
                <Label x:Name="GuestNameLabel"
                       TextColor="#FFFFFF"
                       FontSize="18"
                       FontAttributes="Bold" />
                <Label x:Name="RoomNumberLabel"
                       TextColor="#AAAAAA"
                       FontSize="16" />

                <DatePicker x:Name="CheckOutDatePicker"
                            TextColor="#CCCCCC"
                            BackgroundColor="#222222"
                            HeightRequest="48" />

                <TimePicker x:Name="CheckOutTimePicker"
                            TextColor="#CCCCCC"
                            BackgroundColor="#222222"
                            HeightRequest="48" />

                <Button Text="âœ“ Confirm Check Out"
                        Clicked="OnConfirmCheckOutClicked"
                        BackgroundColor="#EF4444"
                        TextColor="#FFFFFF"
                        BorderColor="#EF4444"
                        BorderWidth="1"
                        CornerRadius="12"
                        Padding="20,8"
                        FontAttributes="Bold"
                        FontSize="16" />
            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>
</ContentPage>
