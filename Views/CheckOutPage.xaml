<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jindal.Views.CheckOutPage"
             Title="Check Out"
             BackgroundColor="#0D0D0D">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="24">

            <!-- Page Title -->
            <Label Text="Guest Check-Out"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#E0E0E0" />

            <!-- Guest & Room Details -->
            <Frame BackgroundColor="#1A1A1A"
                   CornerRadius="20"
                   HasShadow="True"
                   Padding="20"
                   BorderColor="#2A2A2A">

                <VerticalStackLayout Spacing="18">

                    <Label x:Name="GuestNameLabel"
                           FontSize="20"
                           TextColor="#FFFFFF"
                           FontAttributes="Bold"
                           LineBreakMode="TailTruncation" />

                    <Label x:Name="RoomNumberLabel"
                           FontSize="16"
                           TextColor="#AAAAAA" />

                    <!-- Checkout Date -->
                    <Label Text="Check-Out Date"
                           TextColor="#AAAAAA"
                           FontSize="13" />
                    <DatePicker x:Name="CheckOutDatePicker"
                                TextColor="#CCCCCC"
                                BackgroundColor="#222222"
                                HeightRequest="48" />

                    <!-- Checkout Time -->
                    <Label Text="Check-Out Time"
                           TextColor="#AAAAAA"
                           FontSize="13" />
                    <TimePicker x:Name="CheckOutTimePicker"
                                TextColor="#CCCCCC"
                                BackgroundColor="#222222"
                                HeightRequest="48" />

                    <!-- Confirm Button -->
                    <Button Text="âœ“ Confirm Check-Out"
                            Clicked="OnConfirmCheckOutClicked"
                            BackgroundColor="#DC2626"
                            TextColor="White"
                            BorderColor="#DC2626"
                            FontAttributes="Bold"
                            FontSize="16"
                            CornerRadius="12"
                            Padding="20,10"
                            HeightRequest="48"
                            HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
