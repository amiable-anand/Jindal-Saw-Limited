<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jindal.Views.MainPage"
             BackgroundColor="#F0F2F5"
             Title="Login">

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="20" VerticalOptions="Center" HorizontalOptions="Center">

            <!-- 🔷 Banner -->
            <Image Source="jindal_banner.png"
                   Aspect="AspectFit"
                   HeightRequest="120"
                   Margin="0,20" />

            <!-- 🔷 Title -->
            <Label Text="Welcome to Guesthouse"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#2C3E50" />

            <!-- 🔷 Employee Code -->
            <Entry x:Name="UsernameEntry"
                   Placeholder="Employee Code"
                   PlaceholderColor="#A0A0A0"
                   TextColor="Black"
                   HeightRequest="45"
                   BackgroundColor="White"
                   Margin="0,10"
                 
                   Keyboard="Numeric"
                    />

            <!-- 🔷 Password -->
            <Entry x:Name="PasswordEntry"
                   Placeholder="Password"
                   PlaceholderColor="#A0A0A0"
                   IsPassword="True"
                   TextColor="Black"
                   HeightRequest="45"
                   BackgroundColor="White"
                   Margin="0,10"
                  
                    />

            <!-- 🔴 Error Message -->
            <Label x:Name="ErrorMessage"
                   TextColor="Red"
                   FontSize="14"
                   IsVisible="False"
                   HorizontalOptions="Center" />

            <!-- 🔷 Login Button -->
            <Button Text="Login"
                    Clicked="OnLoginClicked"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    HeightRequest="45"
                    WidthRequest="200"
                    Margin="0,20,0,0"
                    HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
