<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jindal.Views.MainPage"
             BackgroundColor="#F8FAFC"
             Title="Login">

    <Grid>
        <!-- 🔹 Optional Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="White" Offset="0.0" />
                <GradientStop Color="White" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <!-- 🔹 ScrollView for responsiveness -->
        <ScrollView>
            <VerticalStackLayout Padding="30"
                                 Spacing="24"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Center">

                <!-- 🔷 Jindal Logo/Banner -->
                <Image Source="jindal_banner.png"
                       Aspect="AspectFit"
                       HeightRequest="100"
                       Margin="0,20" />

                <!-- 🔷 Login Card -->
                <Border BackgroundColor="White"
                        StrokeShape="RoundRectangle 16"
                        Padding="24"
                        WidthRequest="320"
                        VerticalOptions="Center">
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.15" Radius="8" Offset="0,4" />
                    </Border.Shadow>

                    <VerticalStackLayout Spacing="18">

                <!-- Welcome Title -->
                        <Label Text="Welcome to Jindal"
                               FontSize="24"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="#1E3A8A" />
                        <Label Text="Guest Management System"
                               FontSize="16"
                               HorizontalOptions="Center"
                               TextColor="#64748B"
                               Margin="0,0,0,10" />

                        <!-- 🧑 Username Entry -->
                        <Entry x:Name="UsernameEntry"
                               Placeholder="Username"
                               Keyboard="Text"
                               TextColor="#374151"
                               PlaceholderColor="#9CA3AF"
                               BackgroundColor="#F3F4F6"
                               HeightRequest="50"
                               Margin="0" />

                        <!-- 🔐 Password Entry -->
                        <Entry x:Name="Password"
                               Placeholder="Password"
                               IsPassword="True"
                               TextColor="#374151"
                               PlaceholderColor="#9CA3AF"
                               BackgroundColor="#F3F4F6"
                               HeightRequest="50"
                               Margin="0" />

                        <!-- 👁 Show Password Option -->
                        <HorizontalStackLayout Spacing="6" VerticalOptions="Center">
                            <CheckBox x:Name="ShowPasswordCheckBox"
                                      Color="#1E3A8A"
                                      CheckedChanged="OnShowPasswordCheckedChanged" />
                            <Label Text="Show Password"
                                   TextColor="#64748B"
                                   FontSize="14"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>

                        <!-- ❗ Error Message -->
                        <Label x:Name="ErrorMessage"
                               TextColor="#DC2626"
                               FontSize="13"
                               IsVisible="False"
                               HorizontalOptions="Center" />

                        <!-- 🔘 Login Button -->
                        <Button Text="🔐 Login"
                                Clicked="OnLoginClicked"
                                BackgroundColor="#1E3A8A"
                                TextColor="White"
                                FontAttributes="Bold"
                                HeightRequest="50"
                                CornerRadius="12"
                                HorizontalOptions="Center"
                                WidthRequest="220" />

                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
