<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jindal.Views.MainPage"
             BackgroundColor="#F8FAFC"
             Title="Login">

    <Grid>
        <!-- 🔹 Optional Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="White" Offset="0.0" />
                <GradientStop Color="White" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <!-- 🔹 ScrollView for responsiveness -->
        <ScrollView>
            <VerticalStackLayout Padding="30"
                                 Spacing="24"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Center">

                <!-- 🔷 Jindal Logo/Banner -->
                <Frame BackgroundColor="Transparent" BorderColor="Transparent" Padding="0">
                    <StackLayout>
                        <Image Source="jindal_banner.png"
                               Aspect="AspectFit"
                               HeightRequest="120"
                               Margin="0,10" />
                        <!-- Company Tagline -->
                        <Label Text="Enterprise Guest Management Excellence"
                               FontSize="12"
                               HorizontalOptions="Center"
                               TextColor="#64748B"
                               FontAttributes="Italic"
                               Margin="0,0,0,10" />
                    </StackLayout>
                </Frame>

                <!-- 🔷 Enhanced Login Card with Glassmorphism Effect -->
                <Border BackgroundColor="White"
                        StrokeShape="RoundRectangle 20"
                        Stroke="#E5E7EB"
                        StrokeThickness="1"
                        Padding="30"
                        WidthRequest="360"
                        VerticalOptions="Center">
                    <Border.Shadow>
                        <Shadow Brush="Black" Opacity="0.12" Radius="12" Offset="0,6" />
                    </Border.Shadow>

                    <VerticalStackLayout Spacing="24">

                        <!-- Welcome Header with Status Indicator -->
                        <StackLayout Spacing="8">
                            <Label Text="🏨 Welcome to Jindal"
                                   FontSize="26"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   TextColor="#1E3A8A" />
                            <Label Text="Professional Guest Management System"
                                   FontSize="15"
                                   HorizontalOptions="Center"
                                   TextColor="#6B7280"
                                   Margin="0,0,0,5" />
                            
                            <!-- API Status Indicator -->
                            <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                                <Ellipse x:Name="ApiStatusIndicator"
                                         WidthRequest="8"
                                         HeightRequest="8"
                                         Fill="#10B981" />
                                <Label x:Name="ApiStatusLabel"
                                       Text="API Connected"
                                       FontSize="11"
                                       TextColor="#6B7280" />
                            </HorizontalStackLayout>
                        </StackLayout>

                        <!-- 🧑 Username Entry -->
                        <Label Text="Username*" 
                               TextColor="{StaticResource OnSurface}" 
                               FontSize="14" 
                               FontAttributes="Bold" 
                               Margin="0,0,0,4" />
                        <Border BackgroundColor="{StaticResource InputBackground}"
                                StrokeShape="RoundRectangle 8"
                                Stroke="{StaticResource InputBorder}"
                                StrokeThickness="1"
                                Padding="2">
                            <Entry x:Name="UsernameEntry"
                                   Placeholder="Enter your username"
                                   Keyboard="Text"
                                   TextColor="{StaticResource InputText}"
                                   PlaceholderColor="{StaticResource InputPlaceholder}"
                                   BackgroundColor="Transparent"
                                   HeightRequest="46"
                                   AutomationId="UsernameEntry"
                                   SemanticProperties.Hint="Enter your username to login"
                                   TextChanged="OnUsernameTextChanged" />
                        </Border>

                        <!-- 🔐 Password Entry -->
                        <Label Text="Password*" 
                               TextColor="{StaticResource OnSurface}" 
                               FontSize="14" 
                               FontAttributes="Bold" 
                               Margin="0,0,0,4" />
                        <Border BackgroundColor="{StaticResource InputBackground}"
                                StrokeShape="RoundRectangle 8"
                                Stroke="{StaticResource InputBorder}"
                                StrokeThickness="1"
                                Padding="2">
                            <Entry x:Name="Password"
                                   Placeholder="Enter your password"
                                   IsPassword="True"
                                   TextColor="{StaticResource InputText}"
                                   PlaceholderColor="{StaticResource InputPlaceholder}"
                                   BackgroundColor="Transparent"
                                   HeightRequest="46"
                                   AutomationId="PasswordEntry"
                                   SemanticProperties.Hint="Enter your password to login"
                                   TextChanged="OnPasswordTextChanged" />
                        </Border>

                        <!-- 👁 Show Password Option -->
                        <HorizontalStackLayout Spacing="6" VerticalOptions="Center">
                            <CheckBox x:Name="ShowPasswordCheckBox"
                                      Color="#1E3A8A"
                                      AutomationId="ShowPasswordCheckbox"
                                      SemanticProperties.Hint="Toggle to show or hide password"
                                      CheckedChanged="OnShowPasswordCheckedChanged" />
                            <Label Text="Show Password"
                                   TextColor="#64748B"
                                   FontSize="14"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>

                        <!-- ❗ Error Message -->
                        <Label x:Name="ErrorMessage"
                               TextColor="#DC2626"
                               FontSize="13"
                               FontAttributes="Bold"
                               IsVisible="False"
                               HorizontalOptions="Center"
                               AutomationId="ErrorMessage"
                               SemanticProperties.HeadingLevel="Level3"
                               Margin="0,8,0,0" />
                        
                        <!-- ✅ Validation Messages -->
                        <Label x:Name="UsernameValidationMessage"
                               TextColor="#DC2626"
                               FontSize="12"
                               IsVisible="False"
                               Margin="0,4,0,0" />
                        
                        <Label x:Name="PasswordValidationMessage"
                               TextColor="#DC2626"
                               FontSize="12"
                               IsVisible="False"
                               Margin="0,4,0,0" />

                        <!-- 🔘 Login Button -->
                        <Button x:Name="LoginButton"
                                Text="🔐 Login"
                                Clicked="OnLoginClicked"
                                BackgroundColor="#1E3A8A"
                                TextColor="White"
                                FontAttributes="Bold"
                                HeightRequest="50"
                                CornerRadius="12"
                                HorizontalOptions="Center"
                                WidthRequest="220"
                                AutomationId="LoginButton"
                                SemanticProperties.Hint="Tap to login with your credentials"
                                IsEnabled="False" />
                        
                        <!-- 🔄 Loading Indicator -->
                        <ActivityIndicator x:Name="LoadingIndicator"
                                          IsVisible="False"
                                          IsRunning="False"
                                          Color="#1E3A8A"
                                          HeightRequest="30"
                                          Margin="0,10,0,0" />

                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
