<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jindal.Views.MainPage"
             BackgroundColor="#121212"
             Title="Login">
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" VerticalOptions="Center">
            <Frame HasShadow="False" CornerRadius="10" Padding="0" HeightRequest="150">
                <Image Source="jindal_banner.png" Aspect="AspectFill" />
            </Frame>
            <Label Text="Welcome to Guesthouse" FontSize="26" FontAttributes="Bold" HorizontalOptions="Center" TextColor="#90CAF9" />
            <Frame BackgroundColor="#1E1E1E" CornerRadius="12" HasShadow="True" Padding="10">
                <Entry x:Name="UsernameEntry" Placeholder="Employee Code" TextColor="White" PlaceholderColor="#B0BEC5" BackgroundColor="Transparent" />
            </Frame>
            <Frame BackgroundColor="#1E1E1E" CornerRadius="12" HasShadow="True" Padding="10">
                <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" TextColor="White" PlaceholderColor="#B0BEC5" BackgroundColor="Transparent" />
            </Frame>
            <Label x:Name="ErrorMessage" TextColor="Red" FontSize="14" IsVisible="False" HorizontalOptions="Center" />
            <Button Text="🔐 Login" Clicked="OnLoginClicked" BackgroundColor="#1E88E5" TextColor="White" FontAttributes="Bold" CornerRadius="25" HeightRequest="50" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
