<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jindal.Views.MainPage"
             BackgroundColor="White"
             Title="Login">

    <Grid>
        <!-- 🔹 Optional Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="White" Offset="0.0" />
                <GradientStop Color="White" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <!-- 🔹 ScrollView for responsiveness -->
        <ScrollView>
            <VerticalStackLayout Padding="30"
                                 Spacing="24"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Center">

                <!-- 🔷 Jindal Logo/Banner -->
                <Image Source="jindal_banner.png"
                       Aspect="AspectFit"
                       HeightRequest="100"
                       Margin="0,20" />

                <!-- 🔷 Login Card -->
                <Frame BackgroundColor="#1A1A1A"
                       CornerRadius="24"
                       Padding="24"
                       HasShadow="True"
                       BorderColor="#3A3A3A"
                       WidthRequest="320"
                       VerticalOptions="Center">

                    <VerticalStackLayout Spacing="18">

                        <!-- Welcome Title -->
                        <Label Text="Welcome to Guesthouse"
                               FontSize="24"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="White" />

                        <!-- 🧑 Username Entry -->
                        <Entry x:Name="EmployeeCode"
                               Placeholder="Employee Code"
                               Keyboard="Numeric"
                               TextColor="White"
                               PlaceholderColor="#CCCCCC"
                               BackgroundColor="#2C2C2C"
                               HeightRequest="50"
                               Margin="0" />

                        <!-- 🔐 Password Entry -->
                        <Entry x:Name="Password"
                               Placeholder="Password"
                               IsPassword="True"
                               TextColor="White"
                               PlaceholderColor="#CCCCCC"
                               BackgroundColor="#2C2C2C"
                               HeightRequest="50"
                               Margin="0" />

                        <!-- 👁 Show Password Option -->
                        <HorizontalStackLayout Spacing="6" VerticalOptions="Center">
                            <CheckBox x:Name="ShowPasswordCheckBox"
                                      Color="#007AFF"
                                      CheckedChanged="OnShowPasswordCheckedChanged" />
                            <Label Text="Show Password"
                                   TextColor="White"
                                   FontSize="14"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>

                        <!-- ❗ Error Message -->
                        <Label x:Name="ErrorMessage"
                               TextColor="#FF5C5C"
                               FontSize="13"
                               IsVisible="False"
                               HorizontalOptions="Center" />

                        <!-- 🔘 Login Button -->
                        <Button Text="Login"
                                Clicked="OnLoginClicked"
                                BackgroundColor="#007AFF"
                                TextColor="White"
                                FontAttributes="Bold"
                                HeightRequest="50"
                                CornerRadius="25"
                                HorizontalOptions="Center"
                                WidthRequest="220" />

                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
