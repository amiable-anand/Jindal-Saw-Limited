<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jindal.Views.MainPage"
             BackgroundColor="White"
             Title="Login">

    <Grid>
        <!-- 🔹 Frosted Background Overlay (optional gradient) -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="White" Offset="0.0" />
                <GradientStop Color="White" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <ScrollView>
            <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center" HorizontalOptions="Center">

                <!-- 🔷 Banner -->
                <Image Source="jindal_banner.png"
                       Aspect="AspectFit"
                       HeightRequest="100"
                       Margin="0,10" />

                <!-- 🔷 Glassmorphic Card -->
                <Frame BackgroundColor="#1A1A1A90"
                       CornerRadius="24"
                       Padding="24"
                       HasShadow="True"
                       BorderColor="#2D2D2D"
                       WidthRequest="320"
                      
                       VerticalOptions="Center">

                    <VerticalStackLayout Spacing="18">

                        <!-- Welcome Text -->
                        <Label Text="Welcome to Guesthouse"
                               FontSize="22"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="#EAEAEA" />

                        <!-- Username Entry -->
                        <Entry x:Name="EmployeeCode"
                               Placeholder="Employee Code"
                               TextColor="#FFFFFF"
                               PlaceholderColor="#9E9E9E"
                               BackgroundColor="#2B2B2B"
                               HeightRequest="48"
                               Keyboard="Numeric"
                               Margin="0,0"
                               />

                        <!-- Password Entry -->
                        <Entry x:Name="Password"
                               Placeholder="Password"
                               IsPassword="True"
                               TextColor="#FFFFFF"
                               PlaceholderColor="#9E9E9E"
                               BackgroundColor="#2B2B2B"
                               HeightRequest="48"
                               Margin="0,0"
                               />

                        <!-- Error Message -->
                        <Label x:Name="ErrorMessage"
                               TextColor="#FF5C5C"
                               FontSize="13"
                               IsVisible="False"
                               HorizontalOptions="Center" />

                        <!-- Login Button -->
                        <Button Text="Login"
                                Clicked="OnLoginClicked"
                                BackgroundColor="#007AFF"
                                TextColor="White"
                                FontAttributes="Bold"
                                HeightRequest="46"
                                CornerRadius="18"
                                WidthRequest="220"
                                HorizontalOptions="Center" />

                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>