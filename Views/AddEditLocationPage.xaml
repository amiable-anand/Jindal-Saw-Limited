<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jindal.Views.AddEditLocationPage"
             Title="Add/Edit Location"
             BackgroundColor="#F8FAFC">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Welcome Section -->
            <Frame BackgroundColor="#1E3A8A" 
                   CornerRadius="16" 
                   Padding="20" 
                   HasShadow="True">
                <Label Text="ðŸ“‹ Add or Edit Location"
                       FontSize="20"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="White" />
            </Frame>

            <Frame BackgroundColor="White"
                   CornerRadius="12"
                   HasShadow="True"
                   Padding="20">
                <VerticalStackLayout Spacing="16">

                    <!-- Location Name -->
                    <Label Text="Location Name"
                           FontSize="14"
                           TextColor="#64748B"/>
                    <Entry x:Name="NameEntry"
                           Placeholder="Enter location name"
                           BackgroundColor="#F3F4F6"
                           TextColor="#374151"
                           PlaceholderColor="#9CA3AF"
                           HeightRequest="48"
                           FontSize="14"/>

                    <!-- Location Code -->
                    <Label Text="Location Code"
                           FontSize="14"
                           TextColor="#64748B"/>
                    <Entry x:Name="CodeEntry"
                           Placeholder="Enter location code"
                           BackgroundColor="#F3F4F6"
                           TextColor="#374151"
                           PlaceholderColor="#9CA3AF"
                           HeightRequest="48"
                           FontSize="14"/>

                    <!-- Address -->
                    <Label Text="Address"
                           FontSize="14"
                           TextColor="#64748B"/>
                    <Entry x:Name="AddressEntry"
                           Placeholder="Enter address"
                           BackgroundColor="#F3F4F6"
                           TextColor="#374151"
                           PlaceholderColor="#9CA3AF"
                           HeightRequest="48"
                           FontSize="14"/>

                    <!-- Remark -->
                    <Label Text="Remark"
                           FontSize="14"
                           TextColor="#64748B"/>
                    <Entry x:Name="RemarkEntry"
                           Placeholder="Enter remark (optional)"
                           BackgroundColor="#F3F4F6"
                           TextColor="#374151"
                           PlaceholderColor="#9CA3AF"
                           HeightRequest="48"
                           FontSize="14"/>

                    <!-- Save Button -->
                    <Button Text="Save"
                            Clicked="OnSaveClicked"
                            BackgroundColor="#059669"
                            TextColor="White"
                            FontAttributes="Bold"
                            FontSize="16"
                            CornerRadius="12"
                            Padding="16,10"
                            HeightRequest="50"
                            HorizontalOptions="Center"
                            WidthRequest="200" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
