<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jindal.Views.AddEditLocationPage"
             Title="Add/Edit Location"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <Label Text="Location Name" FontAttributes="Bold"/>
            <Entry x:Name="NameEntry" Placeholder="Enter location name" />

            <Label Text="Location Code" FontAttributes="Bold"/>
            <Entry x:Name="CodeEntry" Placeholder="Enter location code" />

            <Label Text="Address" FontAttributes="Bold"/>
            <Entry x:Name="AddressEntry" Placeholder="Enter address" />

            <Label Text="Remark" FontAttributes="Bold"/>
            <Entry x:Name="RemarkEntry" Placeholder="Enter remark (optional)" />

            <Button Text="Save"
                    Clicked="OnSaveClicked"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HeightRequest="48" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
