<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jindal.MainPage"
             BackgroundColor="#E9ECEF">

    <ScrollView>
        <Grid VerticalOptions="CenterAndExpand" Padding="20">
            <Frame BackgroundColor="White"
                   CornerRadius="16"
                   HasShadow="True"
                   Padding="0"
                   HorizontalOptions="FillAndExpand"
                   MaximumWidthRequest="420"
                   VerticalOptions="CenterAndExpand">

                <VerticalStackLayout Spacing="0">

                    <!-- 🔹 Company Banner -->
                    <Image Source="jindal_banner.png"
                           Aspect="AspectFit"
                           HeightRequest="140"
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="Start"
                           Margin="0"
                           />

                    <!-- 🔹 Form Content -->
                    <VerticalStackLayout Padding="24" Spacing="18">

                        <!-- Title -->
                        <Label Text="Welcome Back"
                               FontSize="26"
                               FontAttributes="Bold"
                               TextColor="#212529"
                               HorizontalOptions="Center"/>

                        <Label Text="Login to access the guesthouse services"
                               FontSize="14"
                               TextColor="#6C757D"
                               HorizontalOptions="Center"/>

                        <!-- Employee Code -->
                        <Label Text="Employee Code"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#495057"/>

                        <Frame CornerRadius="8"
                               Padding="0"
                               HasShadow="False"
                               BorderColor="#CED4DA"
                               BackgroundColor="#F8F9FA">
                            <Entry x:Name="EmployeeCodeEntry"
                                   Placeholder="Enter your employee code"
                                   BackgroundColor="Transparent"
                                   TextColor="#212529"
                                   HeightRequest="44" />        
                        </Frame>

                        <!-- Password -->
                        <Label Text="Password"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#495057"/>

                        <Frame CornerRadius="8"
                               Padding="0"
                               HasShadow="False"
                               BorderColor="#CED4DA"
                               BackgroundColor="#F8F9FA">
                            <Entry x:Name="PasswordEntry"
                               Placeholder="Enter your password"
                               IsPassword="True"
                               BackgroundColor="Transparent"
                               TextColor="#212529"
                               HeightRequest="44" />
                        </Frame>

                        <!-- Show Password Option -->
                        <HorizontalStackLayout Spacing="6">
                            <CheckBox x:Name="ShowPasswordCheckBox"
                                      CheckedChanged="OnShowPasswordChanged"/>
                            <Label Text="Show Password"
                                   FontSize="13"
                                   TextColor="#6C757D"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>

                        <!-- Login Button -->
                        <Button Text="Login"
                                Clicked="OnLoginClicked"
                                BackgroundColor="#0D6EFD"
                                TextColor="White"
                                FontAttributes="Bold"
                                CornerRadius="8"
                                HeightRequest="48"
                                FontSize="16"/>

                        <!-- Error Message -->
                        <Label x:Name="ErrorMessage"
                               Text=""
                               IsVisible="False"
                               TextColor="Red"
                               FontSize="13"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </ScrollView>
</ContentPage>
